{{!-- Layout --}}
{{!< default}}

{{!-- Class for <body> --}}
{{#contentFor "mapache_class_body"}}is-podcast has-cover is-transparency{{/contentFor}}

{{#post}}
<section class="spc-header u-relative u-overflowHidden u-bgDark">
    {{#if feature_image}}
        <img class="u-absolute u-image u-block lazyload blur-up"
            src="{{img_url feature_image size="xl"}}"
            srcset="{{img_url feature_image size="xxs"}}"
            data-srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            data-sizes="(max-width: 800px) 400px, (max-width: 1170px) 700px, 1400px"
            alt="{{title}}"
        />
    {{/if}}

    <div class="spc-h-inner u-textColorWhite u-maxWidth1040 u-container u-relative zindex3 u-textAlignCenter">
        <h1 class="spc-h-t u-md-fontSize36 u-textColorWhite">{{title}}</h1>
        {{content}}
    </div>
</section>
{{/post}}

<div class="u-container">
    <div class="story-feed u-maxWidth1000 u-marginAuto u-paddingTop30 u-paddingBottom30">
        <div class="story-feed-content">
        {{#foreach posts visibility="all"}}
            {{!-- Sidebar - partials/sidebar/sidebar.hbs --}}
            {{>"story/story-podcast"}}
        {{/foreach}}
        </div>
    </div>
</div>