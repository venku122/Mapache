{{!-- Tag Cloud --}}
{{#get "tags" limit="5" include="count.posts" order="count.posts desc"}}
<div class="sidebar-items u-marginBottom30 mp-category-item">
    <ul class="mp-category-list">
        {{#foreach tags}}
            <li class="u-relative">
                <a href="{{url absolute="true"}}" title="{{name}}" class="mp-category-link u-relative u-flexCenter u-fontWeightMedium">
                    {{#if feature_image}}
                    <img class="u-absolute0 u-image blur-up lazyload"
                        src="{{img_url feature_image size="m"}}"
                        srcset="{{img_url feature_image size="xxs"}}"
                        data-srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w"
                        data-sizes="(max-width: 1000px) 400px, 600px"
                        alt="{{title}}"
                    />
                    <span class="mp-category-bg u-absolute0"></span>
                    {{else}}
                    <span class="u-bgGradient u-absolute0" style="z-index: -1"></span>
                    {{/if}}

                    <span class="u-fontSizeBase u-textColorWhite u-flex0">{{name}}</span>
                    <span class="bar u-flex1"></span>
                    <span class="mp-category-count u-round u-flex0 u-flexCenter justify-content-center">{{count.posts}}</span>
                </a>
            </li>
        {{/foreach}}
    </ul>
</div>
{{/get}}
