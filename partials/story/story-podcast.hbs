{{!-- hr > line in top --}}
<hr class="hr-list">

<article class="story u-block-before-md u-flex u-relative">
    <a href="{{url}}" class="story-image u-relative u-overflowHidden u-bgGray image-hover">
        {{!-- Featured Image --}}
        {{#if feature_image}}
            <img class="story-img u-absolute0 u-image u-block lazyload blur-up"
                src="{{img_url feature_image size="m"}}"
                srcset="{{img_url feature_image size="xxs"}}"
                data-srcset="{{img_url feature_image size="s"}} 300w,{{img_url feature_image size="m"}} 600w"
                data-sizes="(max-width: 1000px) 400px, 600px"
                alt="{{title}}"
            />
        {{else}}
            <div class="u-absolute0 u-bgCover u-block" style="background-image:url({{asset "images/not-image.jpg"}})"></div>
        {{/if}}
    </a>

    <div class="story-body u-flexColumn u-relative">
        {{!-- Category and Datetime partials/helper/helper-story-meta --}}
        {{> "helper/helper-story-meta"}}

        <h2 class="story-title u-fontSize26 u-lineHeightTight title-hover"><a href="{{url}}" class="u-block">{{title}}</a></h2>
        <div class="story-lower u-relative u-overflowHidden u-flexColumnTop"><a href="{{url}}" class="story-excerpt u-block">{{excerpt words="25"}}</a></div>
        <footer class="story-footer u-fontSizeSmaller">
            <a href="{{url}}" class="button button--filled u-textUppercase u-fontSizeSmall u-relative zindex3">
                {{> "icons/listen"}}
                {{t "Listen"}}
            </a>
        </footer>
    </div>
</article>